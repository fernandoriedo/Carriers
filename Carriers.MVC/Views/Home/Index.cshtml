@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p class="lead">

    </p>
</div>

<div class="left_col" role="main">

    <div class="clearfix"></div>

    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h4> About</h4>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Author: ", htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-8">
                            @Html.ActionLink("Fernando Riedo", "About", "Home")
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("E-mail: ", htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-8">
                            @Html.Label("riedo.ec@gmail.com", htmlAttributes: new {@class = "form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Escolha um usuário ou cadastre no menu Users", htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("UserId", (SelectList) ViewBag.UserId, "(Selecione)", new {@class = "form-control"})
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
